<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="256dp"
            android:text="LAN IP:"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/textLANIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter..."
            android:inputType="text"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <Button
            android:id="@+id/btn_on_LAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#673AB7"
            android:text="Turn on PC (LAN)"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="@+id/textPort"
            app:layout_constraintTop_toBottomOf="@+id/textPort" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Port: (default 7776)"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="@+id/textLANIP"
            app:layout_constraintTop_toBottomOf="@+id/textWANIP" />

        <EditText
            android:id="@+id/textPort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="7776"
            android:inputType="text"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="WAN IP:"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="@+id/textLANIP"
            app:layout_constraintTop_toBottomOf="@+id/textLANIP" />

        <EditText
            android:id="@+id/textWANIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Enter..."
            android:inputType="text"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/btn_on_WAN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#673AB7"
            android:text="Turn on PC (WAN)"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="@+id/btn_on_LAN"
            app:layout_constraintTop_toBottomOf="@+id/btn_on_LAN" />

        <Button
            android:id="@+id/btn_profile1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#673AB7"
            android:text="1"
            android:textSize="48sp"
            app:layout_constraintStart_toStartOf="@+id/btn_on_WAN"
            app:layout_constraintTop_toBottomOf="@+id/btn_on_WAN" />

        <Button
            android:id="@+id/btn_profile2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#673AB7"
            android:text="2"
            android:textSize="48sp"
            app:layout_constraintEnd_toStartOf="@+id/btn_profile3"
            app:layout_constraintStart_toEndOf="@+id/btn_profile1"
            app:layout_constraintTop_toBottomOf="@+id/btn_on_WAN" />

        <Button
            android:id="@+id/btn_profile3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#673AB7"
            android:text="3"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_on_WAN"
            app:layout_constraintTop_toBottomOf="@+id/btn_on_WAN" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
